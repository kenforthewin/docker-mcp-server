{
  "name": "docker-mcp-server",
  "version": "2.1.1",
  "description": "Model Context Protocol (MCP) server for Docker container execution with AI assistants",
  "main": "dist/index.js",
  "bin": {
    "docker-mcp-server": "dist/index.js"
  },
  "type": "module",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "docker",
    "ai",
    "claude",
    "assistant",
    "container",
    "development"
  ],
  "author": "Kenneth Bergquist <bergquist.kenneth@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kenforthewin/docker-mcp-server.git"
  },
  "homepage": "https://github.com/kenforthewin/docker-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/kenforthewin/docker-mcp-server/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CLAUDE.md"
  ],
  "scripts": {
    "build": "tsc",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose down && docker-compose build && docker-compose up -d",
    "docker:shell": "docker exec -it mcp-container bash",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^12.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "docker": ">=20.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}